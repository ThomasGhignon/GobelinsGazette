{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
<div class="container vh-100">
    <div class="d-flex align-items-center">
        <a href="/" class="btn btn-primary">Return</a>
    </div>
    <div class="row">
        <div class="col-12 mt-5">
            <h1>{{ post.title }}</h1>
            <div class="d-flex">
                <small>
                    <span class="badge rounded-pill text-bg-info">Created at : 12/05/2022</span>
                    <span class="badge rounded-pill text-bg-info">Category : random</span>
                    <span class="badge rounded-pill text-bg-info">Author : Admin</span>
                    <span class="badge rounded-pill text-bg-info">Likes : {{ post.likes }}</span>
                </small>
            </div>
            <p class="mt-3 mb-3">{{ post.content }}</p>
        </div>
    </div>
</div>
{% endblock %}
