{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block content %}
<div class="container min-h-screen">
    <div class="row">
        <div class="col-12 mt-5 w-9/12 mx-auto">
            <a href="{{ path('app_admin_users') }}" class="btn text-white bg-indigo-600 hover:bg-indigo-700 mb-4">Retour</a>

            <div class="mb-10">
                <h1 class="h2">Éditer</h1>
            </div>

            <div class="grid-cols-12 flex justify-center">
                {{ form_start(userForm) }}
                <div>
                    <div class="form-group mb-2">
                        <label class="form-label">
                            <span class="d-block mb-2">Username</span>
                            {{ form_widget(userForm.username, {'attr': {'class': 'form-control'}}) }}
                        </label>
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">
                            <span class="d-block mb-2">Email</span>
                            {{ form_widget(userForm.email, {'attr': {'class': 'form-control'}}) }}
                        </label>
                    </div>
                    {% if userForm.roles is defined %}
                        <div class="form-group mb-2">
                            <label class="form-label">
                                <span class="d-block mb-2">Rôles</span>
                                {{ form_widget(userForm.roles) }}
                            </label>
                        </div>
                    {% endif %}
                </div>
                {{ form_end(userForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
